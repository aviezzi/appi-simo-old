@page "/user"
@page "/user/{Id}"

@inherits UserDetailDetailComponent

<form>
    <div class="form-group">
        <label for="Name" class="control-label">Nome</label>
        <input for="Name" class="form-control" bind="@Entity.Name"/>
    </div>
    <div class="form-group">
        <label asp-for="Surname" class="control-label">Cognome</label>
        <input asp-for="Surname" class="form-control" bind="@Entity.Surname"/>
    </div>    
    <div class="form-group">
        <label asp-for="Address1" class="control-label">Indirizzo 1</label>
        <input asp-for="Address1" class="form-control" bind="@Entity.CivicAddress.Address1"/>
    </div>    
    <div class="form-group">
        <label asp-for="Address2" class="control-label">Indirizzo 2</label>
        <input asp-for="Address2" class="form-control" bind="@Entity.CivicAddress.Address2"/>
    </div>    
    <div class="form-group">
        <label asp-for="City" class="control-label">Citt&agrave;</label>
        <input asp-for="City" class="form-control" bind="@Entity.CivicAddress.City"/>
    </div>    
    <div class="form-group">
        <label asp-for="Zip" class="control-label">C.A.P.</label>
        <input asp-for="Zip" class="form-control" bind="@Entity.CivicAddress.Zip"/>
    </div>    
    <div class="form-group">
        <label asp-for="State" class="control-label">Stato</label>
        <input asp-for="State" class="form-control" bind="@Entity.CivicAddress.State"/>
    </div>     
    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label">Telefono</label>
        <input asp-for="PhoneNumber" class="form-control" bind="@Entity.PhoneNumber"/>
    </div>    
    <div class="form-group">
        <label asp-for="CardNumber" class="control-label">Tessera FIT</label>
        <input asp-for="CardNumber" class="form-control" bind="@Entity.Fit.CardNumber"/>
    </div>    
    <div class="form-group">
        <button type="button" class="btn btn-block btn-outline-success" onclick="@(async () => await Save())">Salva</button>
        <button type="button" class="btn btn-block btn-outline-danger" style="display: @(Entity.Id != Guid.Empty ? "inline-block;" : "none");" onclick="@(async () => await Delete())">Cancella</button>
    </div>   
</form>