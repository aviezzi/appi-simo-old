@page "/login"

@inherits LoginComponent

<form class="mt-4">

    <div class="card">
        <div class="card-body pt-0">

            <div class="text-danger">
                @Error
            </div>
            <div class="input-group my-4">
                <div class="input-group-prepend">
                    <div class="input-group-text appisimo-prepend">Username</div>
                </div>
                <input type="text" class="form-control" id="login-username" placeholder="Username" bind="@Username"/>
            </div>

            <div class="input-group my-4">
                <div class="input-group-prepend">
                    <div class="input-group-text appisimo-prepend">Password</div>
                </div>
                <input type="password" class="form-control" id="login-password" placeholder="Password" bind="@Password"/>
            </div>

            <button type="button" class="btn btn-primary" onclick="@(async () => await SignIn())">Login</button>

        </div>
    </div>
</form>