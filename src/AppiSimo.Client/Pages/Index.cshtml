@page "/"

@inherits AppiSimo.Client.Pages.IndexComponent

<div class="row">
    <div class="table-responsive">

        <table class="table">
            <thead>
            <tr>
                <th>Nome</th>
                <th>Cognome</th>
                <th>
                    <a class="btn btn-block btn-outline-primary" href="/user">Nuovo</a>
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var user in Users)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Surname</td>
                    <td>
                        <a class="btn btn-block btn-outline-dark" href=@($"user/{user.Id}")>Modifica</a>
                    </td>
                </tr>
            }

            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <Pager TotalItems="@TotalItems" PageSize="@PageSize" CurrentPage="@CurrentPage" CurrentPageChanged="@PagerFiredEvent"/>
</div>