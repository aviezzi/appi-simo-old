@page "/"
@inherits IndexComponent

<br/>

<div class="row">
    <SearcherView SearcherService="@SearcherService"/>
</div>

<div class="row">
    <a class="btn btn-block btn-outline-primary" href="/user">Nuovo</a>
</div>

<div class="row">
    @foreach (var user in Entities)
    {
        <div class="card text-center my-2 ml-4" style="min-width: 320px">
            <div class="card-header font-weight-bold">@user.Name&nbsp;@user.Surname</div>

            <div class="card-body text-justify container-fluid font-weight-bold">
                <div class="row text-left">
                <div class="col">
                    <p>
                        <span>Data di Nascita:&nbsp;</span>
                        <span class="text-secondary">@user.Birthday.ToString("d")</span>
                    </p>
                    <p>
                        <span>@(user.CivicAddress.Address2 == null ? "Indirizzo" : "Indirizzo1"):&nbsp;</span>
                        <span class="text-secondary">@user.CivicAddress.Address1</span>
                    </p>
                    @if (user.CivicAddress.Address2 != null)
                    {
                        <p>
                            <span>Indirizzo2:&nbsp;</span>
                            <span class="text-secondary">@user.CivicAddress.Address2</span>
                        </p>
                    }
                    <p>
                        <span>Citt&agrave;:&nbsp;</span>
                        <span class="text-secondary">@user.CivicAddress.City</span>
                    </p>
                    <p>
                        <span>Cap:&nbsp;</span>
                        <span class="text-secondary">@user.CivicAddress.Zip</span>
                    </p>
                </div>
                    <div class="col">
                        <p>
                            <span>Telefono:&nbsp;</span>
                            <span class="text-secondary">@user.PhoneNumber</span>
                        </p>
                        <p>
                            <span>Tessera FIT:&nbsp;</span>
                            <span class="text-secondary">@user.Fit.CardNumber</span>
                        </p>
                        <p>
                            <span>Saldo:&nbsp;</span>
                            <span class="text-secondary">
                                @user.UsersEvents.Sum(userEvent => userEvent.Cost)&nbsp;&euro;
                            </span>
                        </p>
                    </div>
                </div>
            </div>
            <div class="card-footer text-white d-flex">
                <a class="btn btn-outline-secondary mr-2 flex-fill" href=@($"user/{user.Id}")>Modifica</a>
                <a class="btn btn-outline-info ml-2 flex-fill" href=@($"payments/{user.Id}")>Conto</a>
            </div>
        </div>
    }
</div>

<div class="row">
    <PagerView PagerService="@PagerService" TotalItems="@TotalItems"/>
</div>