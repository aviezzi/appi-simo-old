@page "/"

@inherits IndexComponent

<div class="d-flex my-4">
    <SearcherView SearcherService="@SearcherService"/>
</div>

<div class="d-flex justify-content-center mb-2">
    <a class="btn btn-outline-primary flex-fill" href="/user">Nuovo Utente</a>
</div>

<div class="d-flex flex-wrap justify-content-between">
    @foreach (var user in Entities)
    {
        <div class="card w-100 m-2" style="max-width: 400px">

            <div class="card-header text-center font-weight-bold">
                <h2 class="mb-0">@user.Name&nbsp;@user.Surname</h2>
            </div>

            <div class="card-body font-weight-bold">
                <div class="container-fluid">
                <div class="row">
                <div class="p-2 col-md">
                    <p>
                        <div>Data di Nascita:&nbsp;</div>
                        <div class="text-secondary">@user.Birthday.ToString("d")</div>
                    </p>
                    <p>
                        <div>@(user.CivicAddress.Address2 == null ? "Indirizzo" : "Indirizzo1"):&nbsp;</div>
                        <div class="text-secondary">@user.CivicAddress.Address1</div>
                    </p>
                    @if (user.CivicAddress.Address2 != null)
                    {
                        <p>
                            <div>Indirizzo2:&nbsp;</div>
                            <div class="text-secondary">@user.CivicAddress.Address2</div>
                        </p>
                    }
                    <p>
                        <div>Citt&agrave;:&nbsp;</div>
                        <div class="text-secondary">@user.CivicAddress.City</div>
                    </p>
                    <p>
                        <div>Cap:&nbsp;</div>
                        <div class="text-secondary">@user.CivicAddress.Zip</div>
                    </p>
                </div>
                
                <div class="col-md p-2">
                    <p>
                        <div>Telefono:&nbsp;</div>
                        <div class="text-secondary">@user.PhoneNumber</div>
                    </p>
                    <p>
                        <div>Tessera FIT:&nbsp;</div>
                        <div class="text-secondary">@user.Fit.CardNumber</div>
                    </p>
                    <p>
                        <div>Saldo:&nbsp;</div>
                        <div class="text-secondary">
                            @user.UsersEvents.Sum(userEvent => userEvent.Cost)&nbsp;&euro;
                        </div>
                    </p>
                </div>
                </div>
                </div>

            </div>

            <div class="card-footer d-flex">
                <a class="btn btn-outline-secondary flex-equal mr-2" href=@($"user/{user.Id}")>Modifica</a>
                <a class="btn btn-outline-info flex-equal" href=@($"payments/{user.Id}")>Conto</a>
            </div>

        </div>
    }
    
    @foreach (var _ in Entities)
    {
        <div class="w-100 m-2" style="max-width: 400px"></div>
    }
    
</div>

<div class="d-flex my-2 mb-4">
    <PagerView PagerService="@PagerService" TotalItems="@TotalItems"/>
</div>